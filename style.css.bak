/* font */
.noto-serif {
  font-family: "Noto Serif", serif;
  font-optical-sizing: auto;
  font-weight: 500;
  font-style: normal;
  font-variation-settings:"wdth" 100;
}

.inter {
  font-family: "Inter", sans-serif;
  font-optical-sizing: auto;
  font-weight: 500
  font-style: normal;
}
/* shared class */
.gary{
	color: 37e7e7e;
}
.black{
	color: black;
}
/* navbar */
header{
	width:100%;
	max-width: 1140px;
	margin: 0 auto;
}
.navbar img {
    width: 135px;
    height: 82px;
}
.navbar{
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.menu li{
	list-style: none;
	color: gary;
}
.anchor {
    display: flex;
    gap: 40px;
}
.menu ul{
	display: flex;
	gap: 48px;
}
.menu li a{
	text-decoration: none;
	color: gray;
}
/* banner part start */
.banner {
    display: flex;
    margin: 115px auto;
    width: 1140px;
}

.b-title h4 {
    font-size: 45px;
	margin-bottom: 0px;
	font-weight: bold;
}
.b-title span {
    color: #ff5000;
}





/* Resposive design */
@media screen and (max-width: 576px){
	.navbar img {
		width: 115px;
		height: 52px;
	}
	.menu{
		align-items: center;
	}
	.navbar{
		align-items: center;
		
	}
	
	.anchor{
		visibility: hidden;
	}
	.cart span{
		position: absolute;
		right: 20px;
		top: 40px;
		display: flex;
	}
	/* banner */
	.banner{
		width: 345px;
		flex-direction: column-reverse;
	}
	.b-title h4{
		font-size: 30px;
	}
	.banner img{
		position: relative;
		left: 20px;
	}
}